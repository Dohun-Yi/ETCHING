then
    cmd="cp ${WORKDIR}/${TF_PREFIX}.fusion_gene.txt ./"
    echo $cmd
    eval $cmd
    STATUS=$(echo $?)
    if (( STATUS != 0 ))
    then
	echo "Failed: ${STATUS}: $cmd"
	exit 1034
    fi
fi

